<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="#ffffff" />
            <stroke
                android:width="1dp"
                android:color="#000000" />
            <corners
                android:radius="6dp" />

        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="#1e6258"
                android:endColor="#091a17"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#ead00a" />
            <corners
                android:radius="6dp" />

        </shape>
    </item>

</selector>