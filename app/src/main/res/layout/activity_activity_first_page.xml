<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="de.smart_efb.efbapp.smartefb.ActivityFirstPage">

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mein\nÜbergabebuch"
            android:id="@+id/btnConnectBook"
            android:layout_row="0"
            android:layout_column="0"
            android:padding="20dp"
            android:background="@color/colorPrimary"
            android:layout_margin="6dp"
            android:layout_gravity="fill" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Unsere\nAbsprachen"
            android:id="@+id/button2"
            android:layout_row="0"
            android:layout_column="1"
            android:padding="20dp"
            android:background="@color/colorPrimary"
            android:layout_margin="6dp"
            android:layout_gravity="fill" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Meine + Deine\nZiele"
            android:id="@+id/button3"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_margin="6dp"
            android:padding="20dp"
            android:background="@color/colorPrimary"
            android:layout_gravity="fill" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Prävention"
            android:id="@+id/button4"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_margin="6dp"
            android:padding="20dp"
            android:background="@color/colorPrimary"
            android:layout_gravity="fill" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Erziehungsberatung\nFragen und Antworten"
            android:id="@+id/button6"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_margin="6dp"
            android:padding="20dp"
            android:background="@color/colorPrimary"
            android:layout_gravity="fill"
            android:layout_columnSpan="2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Hier würde dann der nächste Beratungstermin stehen"
            android:id="@+id/textView"
            android:layout_row="3"
            android:layout_column="0"
            android:layout_columnSpan="2"
            android:gravity="center"
            android:padding="6dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Termin vereinbaren"
            android:id="@+id/btnNewDate"
            android:layout_row="4"
            android:layout_column="0"
            android:layout_gravity="fill"
            android:layout_margin="6dp"
            android:layout_columnSpan="2"
            android:background="@color/colorPrimary"
            android:padding="20dp" />

    </GridLayout>
</RelativeLayout>
