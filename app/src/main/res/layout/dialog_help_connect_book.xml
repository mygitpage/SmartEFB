<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="left"
        android:background="@color/body_background"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <TextView
            android:id="@+id/textViewDialogConnectBookSettingsIntro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14dp"
            android:textColor="@color/text_color"
            android:gravity="left"
            android:textStyle="bold"
            android:text="@string/textDialogConnectBookSettingsIntro"
            android:paddingTop="5dp"
            android:paddingBottom="10dp"/>

        <TextView
            android:id="@+id/textViewDialogConnectBookSettings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14dp"
            android:textColor="@color/text_color"
            android:gravity="left"
            android:paddingBottom="5dp"
            android:paddingLeft="5dp"/>


        <TextView
            android:id="@+id/textViewDialogConnectBookSettingsReadByCoach"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14dp"
            android:textColor="@color/text_color"
            android:text="@string/textDialogConnectBookSettingsInfoTextReadByCoach"
            android:gravity="left"
            android:paddingBottom="5dp"
            android:paddingLeft="5dp"/>

        <TextView
            android:id="@+id/textViewDialogConnectBookSettingsInvolvedPerson"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14dp"
            android:textColor="@color/text_color"
            android:textColorLink="@color/colorPrimary"
            android:gravity="left"
            android:text="@string/textDialogConnectBookSettingsLinkToInvolvedPerson"
            android:paddingBottom="5dp"
            android:paddingLeft="5dp"/>

        <TextView
            android:id="@+id/textViewDialogConnectBookSettingsContactCoach"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14dp"
            android:textColor="@color/text_color"
            android:text="@string/textDialogConnectBookSettingsInfoTextContactCoach"
            android:gravity="left"
            android:paddingBottom="5dp"
            android:paddingLeft="5dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginRight="40dp"
            android:layout_marginLeft="40dp"
            android:background="@android:color/darker_gray"/>

        <TextView
            android:id="@+id/textDialogConnectBookSettingsExplainCommentSort"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14dp"
            android:textColor="@color/text_color"
            android:gravity="left"
            android:text="@string/textDialogConnectBookSettingsExplainMessageSortText"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:paddingLeft="5dp"/>

    </LinearLayout>

</ScrollView>