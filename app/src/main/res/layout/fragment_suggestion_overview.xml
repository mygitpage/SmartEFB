    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/meetingOverviewNoSuggestionAvailable"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone">

        <ImageView
            android:id="@+id/meetingOverviewNoSuggestionAvailableImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@drawable/function_not_available_image"/>

        <TextView
            android:id="@+id/meetingOverviewNoSuggestionAvailableText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:textSize="16dp"
            android:textStyle="bold"
            android:text="@string/meetingOverviewNoSuggestionAvailableText"
            android:textColor="@color/text_color" />

    </RelativeLayout>

        <ListView
            android:id="@+id/listViewSuggestionDates"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:transcriptMode="normal"
            android:layout_weight="1"
            android:stackFromBottom="false"
            android:background="@null"
            android:divider="@null">
        </ListView>

    </LinearLayout>
