<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="left"
    android:background="@color/body_background">




    <!-- Show Date and time of next meeting -->

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/containerShowNextMeetingDateAndTime"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="left"
        android:background="@color/body_background"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:visibility="gone">


        <TextView
            android:id="@+id/nextMeetingShowDateAndTimeIntroText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:textColor="@color/text_color"
            android:textStyle="bold"
            android:text="@string/textShowDateAndTimeForMeetingAndWaitForResponse"
            android:gravity="left"
            android:paddingLeft="10dp"
            android:paddingBottom="5dp"
            android:visibility="gone"/>



        <TextView
            android:id="@+id/nextMeetingDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="30dp"
            android:textColor="@color/text_color"
            android:textStyle="bold"
            android:gravity="center_horizontal"
            android:paddingBottom="15dp"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/nextMeetingTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="30dp"
            android:textColor="@color/text_color"
            android:textStyle="bold"
            android:gravity="center_horizontal"
            android:paddingBottom="15dp"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/nextMeetingPlace"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="30dp"
            android:textColor="@color/text_color"
            android:textStyle="bold"
            android:gravity="center_horizontal"
            android:paddingBottom="15dp"
            android:visibility="gone"/>


        <Button
            android:id="@+id/buttonSendChangeMeetingDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/bg_btn_join"
            android:textColor="@color/white"
            android:text="@string/btnChangeMeetingDateText"
            android:layout_gravity="center_horizontal"
            android:layout_marginRight="5dp"
            android:padding="5dp"
            android:visibility="gone"
            android:layout_marginBottom="15dp"/>


    </LinearLayout>

    <!-- End show date and time of next meeting -->


    <TextView
        android:id="@+id/nextMeetingIntroText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16dp"
        android:textColor="@color/text_color"
        android:textStyle="bold"
        android:gravity="left"
        android:paddingLeft="10dp"
        android:paddingBottom="5dp"/>

    <TextView
        android:id="@+id/showExplainTextForFindMeetingWithOldMeeting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/showExplainTextForFindMeetingWithOldMeetingText"
        android:textSize="14dp"
        android:paddingLeft="10dp"
        android:textColor="@color/text_color"
        android:textColorLink="@color/colorPrimary"
        android:visibility="gone"
        android:gravity="left"
        android:paddingBottom="5dp"/>

    <TextView
        android:id="@+id/showExplainTextForWaitingForRequest"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/textExplainTextForWaitingForRequest"
        android:textSize="14dp"
        android:paddingLeft="10dp"
        android:textColor="@color/text_color"
        android:textColorLink="@color/colorPrimary"
        android:visibility="gone"
        android:gravity="left"/>

    <TextView
        android:id="@+id/showExplainTextSendMeetingSuggestions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/textExplainTextSendMeetingSuggestions"
        android:textSize="14dp"
        android:paddingLeft="10dp"
        android:textColor="@color/text_color"
        android:textColorLink="@color/colorPrimary"
        android:visibility="gone"
        android:gravity="left"/>






    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:paddingBottom="10dp"
        android:paddingTop="10dp">


            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="right">

                <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="right">

                    <TextView
                        android:id="@+id/listActualDateMeetingSuggestion"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="22dp"
                        android:textColor="@color/text_color"
                        android:gravity="right"/>

                    <TextView
                        android:id="@+id/listActualTimeMeetingSuggestion"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="22dp"
                        android:textColor="@color/text_color"
                        android:gravity="right"/>

                </LinearLayout>

                <TextView
                    android:id="@+id/listActualPlaceMeetingSuggestion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18dp"
                    android:textColor="@color/text_color"
                    android:gravity="right"/>

        </LinearLayout>

        <View
            android:id="@+id/separateLine"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:background="@android:color/darker_gray"/>


    </LinearLayout>

</LinearLayout>