<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="left"
        android:background="@color/body_background"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/list_element_style">

            <TextView
                android:id="@+id/settingsEfbFragmentDAcousticsSignalsHeadline"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:textColor="@color/colorPrimaryDark"
                android:text="@string/settingsEfbFragmentDAcousticsSignalsHeadline"
                android:gravity="left"
                android:textStyle="bold"
                android:layout_marginLeft="3dp"/>

            <TextView
                android:id="@+id/settingsEfbFragmentDAcousticsSignalsIntro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14dp"
                android:textColor="@color/colorPrimaryDark"
                android:text="@string/settingsEfbFragmentDAcousticsSignalsIntroText"
                android:gravity="left"
                android:layout_marginLeft="3dp"/>

        </LinearLayout>

        <!-- Settings Line 1 (Signal New Arrangement (Now or sketch) or arrangement comment) -->
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/checkBoxContainerArrangementAcoustics"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="left"
            android:visibility="gone"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="30dp">

            <CheckBox android:id="@+id/checkBoxArrangementAcousticsSignal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:theme="@style/chooseAppSettingsCheckboxes"/>

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="left">

                <TextView
                    android:id="@+id/checkBoxArrangementAcousticsSignalTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16dp"
                    android:textColor="@color/text_color"
                    android:gravity="left"
                    android:text="@string/checkBoxArrangementAcousticsSignalText"/>

            </LinearLayout>

        </LinearLayout>


    </LinearLayout>

</ScrollView>