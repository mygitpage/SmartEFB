<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextView
            android:id="@+id/introSettingsText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hier können verschiedene Einstellungen der App geändert werden. In der fertigen App gibt es diese Einstellungsactivity nicht mehr."
            android:textSize="16dp"
            android:textColor="@color/colorPrimary"
            android:gravity="left"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:paddingTop="10dp" />

        <View
            android:id="@+id/separateLine0"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/introSettingsText"
            android:layout_margin="20dp"
            android:background="@android:color/darker_gray"/>

        <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/radioGroup"
            android:layout_below="@+id/separateLine0">

            <RadioButton android:id="@+id/radio_role_mother"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/radioRoleMother"/>
            <RadioButton android:id="@+id/radio_role_father"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/radioRoleFather" />
            <RadioButton android:id="@+id/radio_role_third"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/radioRoleThird" />

        </RadioGroup>


        <View
            android:id="@+id/separateLine1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/radioGroup"
            android:layout_margin="20dp"
            android:background="@android:color/darker_gray"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtChatName"
            android:padding="6dp"
            android:layout_below="@+id/separateLine1"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="40dp"
            android:hint="@string/txtChatNameHint"/>


        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chatname speichern"
            android:id="@+id/saveChatName"
            android:padding="6dp"
            android:layout_below="@+id/separateLine1"
            android:layout_alignTop="@+id/txtChatName"
            android:layout_alignRight="@+id/radioGroup"
            android:layout_alignEnd="@+id/radioGroup"/>


        <View
            android:id="@+id/separateLine2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/txtChatName"
            android:layout_margin="20dp"
            android:background="@android:color/darker_gray"/>


        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_below="@+id/separateLine2"
            android:id="@+id/linearLayout">
            <CheckBox android:id="@+id/menueButton_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Button1" />
            <CheckBox android:id="@+id/menueButton_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Button2" />
            <CheckBox android:id="@+id/menueButton_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Button3" />
            <CheckBox android:id="@+id/menueButton_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Button4" />
            <CheckBox android:id="@+id/menueButton_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Button5" />
            <CheckBox android:id="@+id/menueButton_6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Button6"/>
            <CheckBox android:id="@+id/menueButton_7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Button7"/>
            <CheckBox android:id="@+id/menueButton_8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Button8"/>

        </LinearLayout>


        <View
            android:id="@+id/separateLine3"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/linearLayout"
            android:layout_margin="20dp"
            android:background="@android:color/darker_gray"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="DatePicker Dialog für Datum Vereinbarungen"
            android:id="@+id/showDatePickerDialog"
            android:padding="6dp"
            android:layout_below="@+id/separateLine3"
            android:onClick="onClick_showDateChooserForCurrentArrangement"/>

        <CheckBox android:id="@+id/showCommentLinkArrangement"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Show Comment-Link in Our Arrangement"
            android:onClick="onCheckboxShowArrangementElements"
            android:layout_below="@+id/showDatePickerDialog"/>



        <LinearLayout
            android:id="@+id/makeAnArrangement"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal"
            android:weightSum="3"
            android:layout_below="@+id/showCommentLinkArrangement">

            <EditText
                android:id="@+id/arrangementText"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="2"
                android:background="@color/bg_msg_input"
                android:textColor="@color/text_msg_input"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                android:hint="Neue Absprache eingeben!" />

            <Button
                android:id="@+id/arrangementTextSend"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/bg_btn_join"
                android:textColor="@color/white"
                android:text="@string/buttonSendMessage" />
        </LinearLayout>

        <View
            android:id="@+id/separateLine4"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/makeAnArrangement"
            android:layout_margin="20dp"
            android:background="@android:color/darker_gray"/>




    </RelativeLayout>

</ScrollView>