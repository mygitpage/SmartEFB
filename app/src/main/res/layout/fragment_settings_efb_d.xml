<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFD7BCBC">


        <TextView
            android:id="@+id/introSettingsText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hier können verschiedene Einstellungen der App geändert werden. In der fertigen App gibt es diese Einstellungsactivity nicht mehr."
            android:textSize="16dp"
            android:textColor="@color/colorPrimary"
            android:gravity="left"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:paddingTop="10dp" />

        <View
            android:id="@+id/separateLine0"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/introSettingsText"
            android:layout_margin="20dp"
            android:background="@android:color/darker_gray"/>

        <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/radioGroup"
            android:layout_below="@+id/separateLine0">

            <RadioButton android:id="@+id/radio_role_mother"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/radioRoleMother"/>
            <RadioButton android:id="@+id/radio_role_father"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/radioRoleFather" />
            <RadioButton android:id="@+id/radio_role_third"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/radioRoleThird" />

        </RadioGroup>


        <View
            android:id="@+id/separateLine1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/radioGroup"
            android:layout_margin="20dp"
            android:background="@android:color/darker_gray"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtChatName"
            android:padding="6dp"
            android:layout_below="@+id/separateLine1"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="40dp"
            android:hint="@string/txtChatNameHint"/>


        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Username speichern"
            android:id="@+id/saveUserName"
            android:padding="6dp"
            android:layout_below="@+id/separateLine1"
            android:layout_alignTop="@+id/txtChatName"
            android:layout_alignRight="@+id/radioGroup"
            android:layout_alignEnd="@+id/radioGroup"/>


        <View
            android:id="@+id/separateLine2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/txtChatName"
            android:layout_margin="20dp"
            android:background="@android:color/darker_gray"/>


        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_below="@+id/separateLine2"
            android:id="@+id/linearLayout">
            <CheckBox android:id="@+id/menueButton_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Button1" />
            <CheckBox android:id="@+id/menueButton_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Button2" />
            <CheckBox android:id="@+id/menueButton_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Button3" />
            <CheckBox android:id="@+id/menueButton_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Button4" />
            <CheckBox android:id="@+id/menueButton_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Button5" />
            <CheckBox android:id="@+id/menueButton_6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Button6"/>
            <CheckBox android:id="@+id/menueButton_7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Button7"/>
            <CheckBox android:id="@+id/menueButton_8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Button8"/>

        </LinearLayout>


        <View
            android:id="@+id/separateLine3"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/linearLayout"
            android:layout_margin="20dp"
            android:background="@android:color/darker_gray"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="DatePicker Dialog für Datum Vereinbarungen"
            android:id="@+id/showDatePickerDialog"
            android:padding="6dp"
            android:layout_below="@+id/separateLine3"
            android:onClick="onClick_showDateChooserForCurrentArrangement"/>

        <CheckBox android:id="@+id/showCommentLinkArrangement"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Show Comment-Link in Our Arrangement"
            android:onClick="onCheckboxShowArrangementElements"
            android:layout_below="@+id/showDatePickerDialog"/>

        <CheckBox android:id="@+id/showEvaluateLinkArrangement"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Show Evaluate-Link in Our Arrangement"
            android:onClick="onCheckboxShowArrangementElements"
            android:layout_below="@+id/showCommentLinkArrangement"/>


        <CheckBox android:id="@+id/showOldArrangements"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Show old Arrangements"
            android:onClick="onCheckboxShowArrangementElements"
            android:layout_below="@+id/showEvaluateLinkArrangement"/>

        <CheckBox android:id="@+id/showSketchArrangements"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Show sketch Arrangements"
            android:onClick="onCheckboxShowArrangementElements"
            android:layout_below="@+id/showOldArrangements"/>

        <CheckBox android:id="@+id/showCommentLinkSketchArrangements"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Show comment link for sketch Arrangements"
            android:onClick="onCheckboxShowArrangementElements"
            android:layout_below="@+id/showSketchArrangements"/>



        <LinearLayout
            android:id="@+id/makeAnArrangement"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal"
            android:weightSum="3"
            android:layout_below="@+id/showCommentLinkSketchArrangements">

            <EditText
                android:id="@+id/arrangementText"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="2"
                android:background="@color/bg_msg_input"
                android:textColor="@color/text_msg_input"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                android:hint="Neue Absprache eingeben!" />

            <Button
                android:id="@+id/arrangementTextSend"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/bg_btn_join"
                android:textColor="@color/white"
                android:text="@string/buttonSendMessage" />
        </LinearLayout>



        <LinearLayout
            android:id="@+id/makeAnSketchArrangement"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal"
            android:weightSum="3"
            android:layout_below="@+id/makeAnArrangement"
            android:paddingTop="10dp">

            <EditText
                android:id="@+id/arrangementSketchText"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="2"
                android:background="@color/bg_msg_input"
                android:textColor="@color/text_msg_input"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                android:hint="Entwurf Absprache eingeben!" />

            <Button
                android:id="@+id/arrangementSketchTextSend"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/bg_btn_join"
                android:textColor="@color/white"
                android:text="@string/buttonSendMessage" />
        </LinearLayout>



        <!-- Beginn Einstellungen Ziele-->
        <View
            android:id="@+id/separateLine4"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/makeAnSketchArrangement"
            android:layout_margin="20dp"
            android:background="@android:color/darker_gray"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="DatePicker Dialog für Datum Gemeinsame Ziele"
            android:id="@+id/showDatePickerDialogJointlyGoals"
            android:padding="6dp"
            android:layout_below="@+id/separateLine4"
            android:onClick="onClick_showDateChooserForJointlyGoals"/>

        <CheckBox android:id="@+id/showCommentLinkJointlyGoals"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Show Comment-Link in Jointly Goals"
            android:onClick="onCheckboxShowArrangementElements"
            android:layout_below="@+id/showDatePickerDialogJointlyGoals"/>

        <CheckBox android:id="@+id/showEvaluateLinkJointlyGoals"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Show Evaluate-Link in Jointly Goals"
            android:onClick="onCheckboxShowArrangementElements"
            android:layout_below="@+id/showCommentLinkJointlyGoals"/>


        <CheckBox android:id="@+id/showOldGoals"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Show old Goals"
            android:onClick="onCheckboxShowArrangementElements"
            android:layout_below="@+id/showEvaluateLinkJointlyGoals"/>

        <CheckBox android:id="@+id/showDebetableGoals"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Show debetable goals"
            android:onClick="onCheckboxShowArrangementElements"
            android:layout_below="@+id/showOldGoals"/>

        <CheckBox android:id="@+id/showCommentLinkDebetableGoals"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Show comment link for debetable Goals"
            android:onClick="onCheckboxShowArrangementElements"
            android:layout_below="@+id/showDebetableGoals"/>



        <LinearLayout
            android:id="@+id/makeAnJointlyGoal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal"
            android:weightSum="3"
            android:layout_below="@+id/showCommentLinkDebetableGoals">

            <EditText
                android:id="@+id/jointlyGoalText"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="2"
                android:background="@color/bg_msg_input"
                android:textColor="@color/text_msg_input"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                android:hint="Gemeinsames Ziel eingeben!" />

            <Button
                android:id="@+id/jointlyGoalTextSend"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/bg_btn_join"
                android:textColor="@color/white"
                android:text="@string/buttonSendMessage" />
        </LinearLayout>



        <LinearLayout
            android:id="@+id/makeAndebetableGoal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal"
            android:weightSum="3"
            android:layout_below="@+id/makeAnJointlyGoal"
            android:paddingTop="10dp">

            <EditText
                android:id="@+id/debetableGoalText"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="2"
                android:background="@color/bg_msg_input"
                android:textColor="@color/text_msg_input"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                android:hint="Strittiges Ziel eingeben!" />

            <Button
                android:id="@+id/debetableGoalTextSend"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/bg_btn_join"
                android:textColor="@color/white"
                android:text="@string/buttonSendMessage" />
        </LinearLayout>

        <!-- Ende Einstellungen Ziele -->

        <View
            android:id="@+id/separateLine5"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/makeAndebetableGoal"
            android:layout_margin="20dp"
            android:background="@android:color/darker_gray"/>


        <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/settingsChooseMeetingStatus"
            android:layout_gravity="center"
            android:padding="5dp"
            android:gravity="center"
            android:layout_below="@+id/separateLine5"
            android:background="@color/bg_btn_join">

            <RadioButton android:id="@+id/settingMeetingStatus_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Meeting Status 0 (kein Termin)"
                android:textColor="@color/text_color_white"
                android:textSize="14dp"
                android:gravity="center_vertical"
                android:drawableLeft="?android:attr/listChoiceIndicatorSingle"
                android:theme="@style/styleMakeFirstMeeting"
                android:button="@null"
                android:layout_weight="0.2" />
            <RadioButton android:id="@+id/settingMeetingStatus_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Meeting Status 1 (Terminanfrage)"
                android:textColor="@color/text_color_white"
                android:textSize="14dp"
                android:gravity="center_vertical"
                android:drawableLeft="?android:attr/listChoiceIndicatorSingle"
                android:theme="@style/styleMakeFirstMeeting"
                android:button="@null"
                android:layout_weight="0.2" />
            <RadioButton android:id="@+id/settingMeetingStatus_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Meeting Status 2 (Termin bestätigt)"
                android:textColor="@color/text_color_white"
                android:textSize="14dp"
                android:gravity="center_vertical"
                android:drawableLeft="?android:attr/listChoiceIndicatorSingle"
                android:theme="@style/styleMakeFirstMeeting"
                android:button="@null"
                android:layout_weight="0.2" />
            <RadioButton android:id="@+id/settingMeetingStatus_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Meeting Status 3 (Termin nicht bestätigbar!)"
                android:textColor="@color/text_color_white"
                android:textSize="14dp"
                android:gravity="center_vertical"
                android:drawableLeft="?android:attr/listChoiceIndicatorSingle"
                android:theme="@style/styleMakeFirstMeeting"
                android:button="@null"
                android:layout_weight="0.2" />
            <RadioButton android:id="@+id/settingMeetingStatus_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Meeting Status 4 (Noch nicht vergeben)"
                android:textColor="@color/text_color_white"
                android:textSize="14dp"
                android:gravity="center_vertical"
                android:drawableLeft="?android:attr/listChoiceIndicatorSingle"
                android:theme="@style/styleMakeFirstMeeting"
                android:button="@null"
                android:layout_weight="0.2" />
            <RadioButton android:id="@+id/settingMeetingStatus_6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Meeting Status 5 (Gemeinsamen Termin finden)"
                android:textColor="@color/text_color_white"
                android:textSize="14dp"
                android:gravity="center_vertical"
                android:drawableLeft="?android:attr/listChoiceIndicatorSingle"
                android:theme="@style/styleMakeFirstMeeting"
                android:button="@null"
                android:layout_weight="0.2" />
            <RadioButton android:id="@+id/settingMeetingStatus_7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Meeting Status 7 (Terminbestätigung abwarten)"
                android:textColor="@color/text_color_white"
                android:textSize="14dp"
                android:gravity="center_vertical"
                android:drawableLeft="?android:attr/listChoiceIndicatorSingle"
                android:theme="@style/styleMakeFirstMeeting"
                android:button="@null"
                android:layout_weight="0.2" />
            <RadioButton android:id="@+id/settingMeetingStatus_8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Meeting Status 8 (Terminbestätigung eingegangen)"
                android:textColor="@color/text_color_white"
                android:textSize="14dp"
                android:gravity="center_vertical"
                android:drawableLeft="?android:attr/listChoiceIndicatorSingle"
                android:theme="@style/styleMakeFirstMeeting"
                android:button="@null"
                android:layout_weight="0.2" />
            <RadioButton android:id="@+id/settingMeetingStatus_9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Meeting Status 9 (Termin+Terminfinden)"
                android:textColor="@color/text_color_white"
                android:textSize="14dp"
                android:gravity="center_vertical"
                android:drawableLeft="?android:attr/listChoiceIndicatorSingle"
                android:theme="@style/styleMakeFirstMeeting"
                android:button="@null"
                android:layout_weight="0.2" />


        </RadioGroup>


        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="DatePicker Dialog für Datum Terminvorschläge"
            android:id="@+id/showDatePickerDialogMeetingSuggestions"
            android:padding="6dp"
            android:layout_below="@+id/settingsChooseMeetingStatus"
            android:onClick="onClick_showDateChooserForMeetingSuggestions"/>




        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Read Configuration File"
            android:id="@+id/readXMLConfigurationFile"
            android:padding="6dp"
            android:layout_below="@+id/showDatePickerDialogMeetingSuggestions"
            android:onClick="onClick_readXMLConfigurationFile"/>


    </RelativeLayout>

</ScrollView>