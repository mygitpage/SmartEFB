<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="de.smart_efb.efbapp.smartefb.ActivityEfbSettings">



    <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/radioGroup">
        <RadioButton android:id="@+id/radio_role_mother"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/radioRoleMother"
            android:onClick="onRadioButtonClicked"/>
        <RadioButton android:id="@+id/radio_role_father"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/radioRoleFather"
            android:onClick="onRadioButtonClicked"/>
        <RadioButton android:id="@+id/radio_role_third"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/radioRoleThird"
            android:onClick="onRadioButtonClicked"/>
    </RadioGroup>


    <View
        android:id="@+id/separateLine1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/radioGroup"
        android:layout_margin="20dp"
        android:background="@android:color/darker_gray"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtChatName"
        android:padding="6dp"
        android:layout_below="@+id/separateLine1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="40dp"
        android:hint="@string/txtChatNameHint"/>


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name speichern"
        android:id="@+id/saveChatName"
        android:padding="6dp"
        android:layout_below="@+id/separateLine1"
        android:layout_alignTop="@+id/txtChatName"
        android:layout_alignRight="@+id/radioGroup"
        android:layout_alignEnd="@+id/radioGroup"
        android:onClick="onClick_saveChatName"/>


    <View
        android:id="@+id/separateLine2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/txtChatName"
        android:layout_margin="20dp"
        android:background="@android:color/darker_gray"/>


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/separateLine2"
        android:id="@+id/linearLayout">
        <CheckBox android:id="@+id/menueButton_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Button1"
            android:onClick="onCheckboxMenueButtonClicked"/>
        <CheckBox android:id="@+id/menueButton_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Button2"
            android:onClick="onCheckboxMenueButtonClicked"/>
        <CheckBox android:id="@+id/menueButton_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Button3"
            android:onClick="onCheckboxMenueButtonClicked"/>
        <CheckBox android:id="@+id/menueButton_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Button4"
            android:onClick="onCheckboxMenueButtonClicked"/>
        <CheckBox android:id="@+id/menueButton_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Button5"
            android:onClick="onCheckboxMenueButtonClicked"/>
        <CheckBox android:id="@+id/menueButton_6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Button6"
            android:onClick="onCheckboxMenueButtonClicked"/>
        <CheckBox android:id="@+id/menueButton_7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Button7"
            android:onClick="onCheckboxMenueButtonClicked"/>
        <CheckBox android:id="@+id/menueButton_8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Button8"
            android:onClick="onCheckboxMenueButtonClicked"/>
        <CheckBox android:id="@+id/menueButton_9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Button9"
            android:onClick="onCheckboxMenueButtonClicked"/>
        <CheckBox android:id="@+id/menueButton_10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Button10"
            android:onClick="onCheckboxMenueButtonClicked"/>
        <CheckBox android:id="@+id/menueButton_11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Button11"
            android:onClick="onCheckboxMenueButtonClicked"/>
        <CheckBox android:id="@+id/menueButton_12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Button12"
            android:onClick="onCheckboxMenueButtonClicked"/>
        <CheckBox android:id="@+id/menueButton_13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Button13"
            android:onClick="onCheckboxMenueButtonClicked"/>
    </LinearLayout>


    <View
        android:id="@+id/separateLine3"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/linearLayout"
        android:layout_margin="20dp"
        android:background="@android:color/darker_gray"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="DatePicker Dialog fÃ¼r Datum Vereinbarungen"
        android:id="@+id/showDatePickerDialog"
        android:padding="6dp"
        android:layout_below="@+id/separateLine3"
        android:onClick="onClick_showDateChooserForCurrentArrangement"/>



</RelativeLayout>

</ScrollView>