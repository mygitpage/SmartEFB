<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="left"
        android:background="@color/body_background"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">


        <TextView
            android:id="@+id/makeMeetingIntroText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/makeFirstMeetingIntroText"
            android:textSize="16dp"
            android:textColor="@color/text_color"
            android:gravity="left"
            android:paddingBottom="15dp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/makeFirstMeetingExplainText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/makeFirstMeetingExplainText"
            android:textSize="14dp"
            android:paddingLeft="10dp"
            android:paddingBottom="15dp"
            android:textColor="@color/text_color"
            android:textColorLink="@color/colorPrimary"
            android:gravity="left"/>


        <TextView
            android:id="@+id/makeFirstMeetingChooseTimezoneError"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:textColor="@color/text_accent_color"
            android:gravity="left"
            android:visibility="gone"
            android:text="@string/makeFirstMeetingChooseTimezoneErrorText"
            android:paddingBottom="5dp"/>

        <android.support.v7.widget.GridLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:grid="http://schemas.android.com/apk/res-auto"
            android:id="@+id/makeMeetingTimezoneSuggestionGrid"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:padding="5dp"
            android:background="@color/inputfield_background"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="5dp"
            grid:alignmentMode="alignBounds"
            grid:columnCount="6"
            grid:rowCount="4"
            grid:rowOrderPreserved="false"
            grid:useDefaultMargins="true">


            <!-- Spalte 0 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/makeMeetingTimezone1"
                android:textSize="14dp"
                android:textColor="@color/text_color_white"
                android:gravity="right"
                grid:layout_column="0"
                grid:layout_row="1"
                grid:layout_columnWeight="0.2"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/makeMeetingTimezone2"
                android:textSize="14dp"
                android:textColor="@color/text_color_white"
                android:gravity="right"
                grid:layout_column="0"
                grid:layout_row="2"
                grid:layout_columnWeight="0.2"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/makeMeetingTimezone3"
                android:textSize="14dp"
                android:textColor="@color/text_color_white"
                android:gravity="right"
                grid:layout_column="0"
                grid:layout_row="3"
                grid:layout_columnWeight="0.2"/>
            <!-- Ende Spalte 0 -->


            <!-- Spalte 1 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/makeMeetingTimelineDayMo"
                android:textSize="14dp"
                android:textColor="@color/text_color_white"
                android:gravity="center"
                grid:layout_column="1"
                grid:layout_row="0"
                grid:layout_columnWeight="0.2"/>

            <CheckBox android:id="@+id/makeMeetingTimezone_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:theme="@style/styleMakeFirstMeeting"
                grid:layout_column="1"
                grid:layout_row="1"
                grid:layout_columnWeight="0.2"/>
            <CheckBox android:id="@+id/makeMeetingTimezone_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:theme="@style/styleMakeFirstMeeting"
                grid:layout_column="1"
                grid:layout_row="2"
                grid:layout_columnWeight="0.2"/>
            <CheckBox android:id="@+id/makeMeetingTimezone_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:theme="@style/styleMakeFirstMeeting"
                grid:layout_column="1"
                grid:layout_row="3"
                grid:layout_columnWeight="0.2"/>
            <!-- Ende Spalte 1 -->


            <!-- Spalte 2 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/makeMeetingTimelineDayDi"
                android:textSize="14dp"
                android:textColor="@color/text_color_white"
                android:gravity="center"
                grid:layout_column="2"
                grid:layout_row="0"
                grid:layout_columnWeight="0.2"/>

            <CheckBox android:id="@+id/makeMeetingTimezone_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:theme="@style/styleMakeFirstMeeting"
                grid:layout_column="2"
                grid:layout_row="1"
                grid:layout_columnWeight="0.2"/>
            <CheckBox android:id="@+id/makeMeetingTimezone_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:theme="@style/styleMakeFirstMeeting"
                grid:layout_column="2"
                grid:layout_row="2"
                grid:layout_columnWeight="0.2"/>
            <CheckBox android:id="@+id/makeMeetingTimezone_6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:theme="@style/styleMakeFirstMeeting"
                grid:layout_column="2"
                grid:layout_row="3"
                grid:layout_columnWeight="0.2"/>
            <!-- Ende Spalte 2 -->

            <!-- Spalte 3 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/makeMeetingTimelineDayMi"
                android:textSize="14dp"
                android:textColor="@color/text_color_white"
                android:gravity="center"
                grid:layout_column="3"
                grid:layout_row="0"
                grid:layout_columnWeight="0.2"/>

            <CheckBox android:id="@+id/makeMeetingTimezone_7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:theme="@style/styleMakeFirstMeeting"
                grid:layout_column="3"
                grid:layout_row="1"
                grid:layout_columnWeight="0.2"/>
            <CheckBox android:id="@+id/makeMeetingTimezone_8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:theme="@style/styleMakeFirstMeeting"
                grid:layout_column="3"
                grid:layout_row="2"
                grid:layout_columnWeight="0.2"/>
            <CheckBox android:id="@+id/makeMeetingTimezone_9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:theme="@style/styleMakeFirstMeeting"
                grid:layout_column="3"
                grid:layout_row="3"
                grid:layout_columnWeight="0.2"/>
            <!-- Ende Spalte 3 -->

            <!-- Spalte 4 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/makeMeetingTimelineDayDo"
                android:textSize="14dp"
                android:textColor="@color/text_color_white"
                android:gravity="center"
                grid:layout_column="4"
                grid:layout_row="0"
                grid:layout_columnWeight="0.2"/>

            <CheckBox android:id="@+id/makeMeetingTimezone_10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:theme="@style/styleMakeFirstMeeting"
                grid:layout_column="4"
                grid:layout_row="1"
                grid:layout_columnWeight="0.2"/>
            <CheckBox android:id="@+id/makeMeetingTimezone_11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:theme="@style/styleMakeFirstMeeting"
                grid:layout_column="4"
                grid:layout_row="2"
                grid:layout_columnWeight="0.2"/>
            <CheckBox android:id="@+id/makeMeetingTimezone_12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:theme="@style/styleMakeFirstMeeting"
                grid:layout_column="4"
                grid:layout_row="3"
                grid:layout_columnWeight="0.2"/>
            <!-- Ende Spalte 4 -->

            <!-- Spalte 5 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/makeMeetingTimelineDayFr"
                android:textSize="14dp"
                android:textColor="@color/text_color_white"
                android:gravity="center"
                grid:layout_column="5"
                grid:layout_row="0"
                grid:layout_columnWeight="0.2"/>

            <CheckBox android:id="@+id/makeMeetingTimezone_13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:theme="@style/styleMakeFirstMeeting"
                grid:layout_column="5"
                grid:layout_row="1"
                grid:layout_columnWeight="0.2"/>
            <CheckBox android:id="@+id/makeMeetingTimezone_14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:theme="@style/styleMakeFirstMeeting"
                grid:layout_column="5"
                grid:layout_row="2"
                grid:layout_columnWeight="0.2"/>
            <CheckBox android:id="@+id/makeMeetingTimezone_15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:theme="@style/styleMakeFirstMeeting"
                grid:layout_column="5"
                grid:layout_row="3"
                grid:layout_columnWeight="0.2"/>
            <!-- Ende Spalte 5 -->



        </android.support.v7.widget.GridLayout>

        <TextView
            android:id="@+id/makeFirstMeetingChoosePlaceIntro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/makeFirstMeetingChoosePlaceIntroText"
            android:textSize="14dp"
            android:paddingLeft="10dp"
            android:paddingBottom="15dp"
            android:paddingTop="15dp"
            android:textColor="@color/text_color"
            android:gravity="left"/>


        <TextView
            android:id="@+id/makeFirstMeetingChoosePlaceError"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:textColor="@color/text_accent_color"
            android:gravity="left"
            android:visibility="gone"
            android:text="@string/makeFirstMeetingChoosePlaceErrorText"
            android:paddingBottom="5dp"/>


        <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/chooseFirstMeetingPlace"
            android:layout_gravity="center"
            android:padding="5dp"
            android:gravity="center"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/app_radiogroup_style">

            <RadioButton android:id="@+id/makeMeetingPlace_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/firstMeetingPlaceWerderText"
                android:textColor="@color/text_color_white"
                android:textSize="14dp"
                android:gravity="center_vertical"
                android:drawableLeft="?android:attr/listChoiceIndicatorSingle"
                android:theme="@style/styleMakeFirstMeeting"
                android:button="@null"
                android:layout_weight="0.2" />
            <RadioButton android:id="@+id/makeMeetingPlace_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/firstMeetingPlaceBadBelzigText"
                android:textColor="@color/text_color_white"
                android:textSize="14dp"
                android:gravity="center_vertical"
                android:drawableLeft="?android:attr/listChoiceIndicatorSingle"
                android:theme="@style/styleMakeFirstMeeting"
                android:button="@null"
                android:layout_weight="0.2" />
            
        </RadioGroup>


        <TextView
            android:id="@+id/makeFirstMeetingProblemIntro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/makeFirstMeetingProblemIntroText"
            android:textSize="14dp"
            android:paddingLeft="10dp"
            android:paddingBottom="15dp"
            android:paddingTop="15dp"
            android:textColor="@color/text_color"
            android:gravity="left"/>


        <TextView
            android:id="@+id/makeFirstMeetingProblemError"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:textColor="@color/text_accent_color"
            android:gravity="left"
            android:visibility="gone"
            android:text="@string/makeFirstMeetingProblemErrorText"
            android:paddingBottom="5dp"/>

        <EditText
            android:id="@+id/inputFirstMeetingProblemText"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:textColor="@color/text_color_white"
            android:hint="@string/inputFirstMeetingProblemHintText"
            android:gravity="left|top"
            android:background="@drawable/app_edittext_style"
            android:layout_margin="10dp"
            android:textColorHint="@color/text_color_white"
            android:inputType="textNoSuggestions|text|textMultiLine"
            android:padding="5dp"/>

        

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="25dp"
            android:paddingLeft="15dp"
            android:gravity="center"
            android:layout_gravity="center_horizontal">

            <Button
                android:id="@+id/buttonSendSuggestionFirstMeeting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/app_button_style"
                android:textColor="@color/text_color_white"
                android:text="@string/btnSendSuggestionFirstMeeting"
                android:layout_gravity="center_horizontal"
                android:layout_marginRight="5dp"
                android:padding="10dp"/>

            <Button
                android:id="@+id/buttonAbbortSuggestionFirstMeeting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/app_button_style"
                android:textColor="@color/text_color_white"
                android:text="@string/btnAbbortSuggestionFirstMeeting"
                android:layout_gravity="center_horizontal"
                android:layout_marginRight="5dp"
                android:padding="10dp"/>

        </LinearLayout>

        <TextView
            android:id="@+id/infoMakeMeetingProcedure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/infoMakeMeetingProcedureText"
            android:textSize="14dp"
            android:textColor="@color/text_color"
            android:textColorLink="@color/colorPrimary"
            android:gravity="left"
            android:paddingLeft="10dp"
            android:paddingTop="15dp"/>


    </LinearLayout>

</ScrollView>