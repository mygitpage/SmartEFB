<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:paddingBottom="5dp"
    android:paddingTop="5dp">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="right"
        android:paddingBottom="15dp">

        <CheckBox android:id="@+id/meetingCheck"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:theme="@style/chooseMeetingSuggestionsCheckboxes"/>

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="right">

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="right">

                <TextView
                    android:id="@+id/listActualDateMeetingSuggestion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="22dp"
                    android:textColor="@color/text_color"
                    android:gravity="right"/>

                <TextView
                    android:id="@+id/listActualTimeMeetingSuggestion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="22dp"
                    android:textColor="@color/text_color"
                    android:gravity="right"/>

            </LinearLayout>

            <TextView
                android:id="@+id/listActualPlaceMeetingSuggestion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:textColor="@color/text_color"
                android:gravity="right"/>

        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/buttonSendSuggestionToCoach"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/app_button_style"
        android:textColor="@color/text_color_white"
        android:text="@string/btnTextSendSuggestionToCoach"
        android:layout_gravity="center_horizontal"
        android:padding="10dp"/>


</LinearLayout>