<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true">

    <!--
    android:scrollbars = "vertical"
    android:scrollbarStyle="insideInset">
    -->

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="left"
        android:background="@color/body_background"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">




        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="5dp">


            <TextView
                android:id="@+id/arrangementEvalauteIntroText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:textColor="@color/text_color"
                android:gravity="left"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/arrangementShowEvaluateBackLink"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:textColor="@color/text_color"
                android:textColorLink="@color/colorPrimary"
                android:gravity="right"/>



        </LinearLayout>

        <TextView
            android:id="@+id/evaluateArrangement"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:textColor="@color/text_color"
            android:gravity="left"
            android:paddingLeft="10dp"
            android:paddingBottom="5dp"/>





        <TextView
            android:id="@+id/questionOneEvaluate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:textColor="@color/text_color"
            android:gravity="left"
            android:textStyle="bold"
            android:text="@string/questionOneEvaluateMySelf"/>


        <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/radioGroupQuestionOne"
            android:layout_gravity="center"
            android:padding="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:divider="@color/text_color_white"
            android:showDividers="middle|beginning|end"
            android:background="@color/colorPrimary">


            <RadioButton android:id="@+id/questionOne_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <RadioButton android:id="@+id/questionOne_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <RadioButton android:id="@+id/questionOne_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <RadioButton android:id="@+id/questionOne_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <RadioButton android:id="@+id/questionOne_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </RadioGroup>




        <TextView
            android:id="@+id/questionTwoEvaluate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:textColor="@color/text_color"
            android:gravity="left"
            android:textStyle="bold"
            android:text="@string/questionTwoEvaluateMyEx"/>






        <TextView
            android:id="@+id/questionThreeEvaluate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:textColor="@color/text_color"
            android:gravity="left"
            android:textStyle="bold"
            android:text="@string/questionThreeEvaluateChildreen"/>








        <TextView
            android:id="@+id/questionFourEvaluate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:textColor="@color/text_color"
            android:gravity="left"
            android:textStyle="bold"
            android:text="@string/questionFourEvaluateThirdPeople"/>






        <TextView
            android:id="@+id/commentEvaluateText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:textColor="@color/text_color"
            android:gravity="left"
            android:textStyle="bold"
            android:text="@string/commentTextEvaluateResult"/>

        <EditText
            android:id="@+id/inputArrangementComment"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:textColor="@color/text_color_white"
            android:hint="@string/commentArrangementTextFieldHintText"
            android:gravity="left|top"
            android:background="@color/inputfield_background"
            android:layout_margin="10dp"
            android:textColorHint="@color/text_color_white"
            android:inputType="textNoSuggestions|text|textMultiLine"
            android:padding="5dp"/>


        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="15dp"
            android:gravity="center"
            android:layout_gravity="center_horizontal">

            <Button
                android:id="@+id/buttonSendArrangementComment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/bg_btn_join"
                android:textColor="@color/white"
                android:text="@string/btnSendEvaluateResult"
                android:layout_gravity="center_horizontal"
                android:layout_marginRight="5dp"
                android:padding="5dp"/>

            <Button
                android:id="@+id/buttonAbortComment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/bg_btn_join"
                android:textColor="@color/white"
                android:text="@string/btnAbortEvaluate"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="5dp"
                android:padding="5dp"/>

        </LinearLayout>



        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="left"
            android:layout_gravity="left"
            android:id="@+id/commentHistoryContainer"
            android:visibility="visible">



            <TextView
                android:id="@+id/commentHistoryIntro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:textColor="@color/text_color"
                android:gravity="left"
                android:textStyle="bold" />



            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center_vertical|left"
                android:id="@+id/commentHolder"/>


        </LinearLayout>

    </LinearLayout>

</ScrollView>